source "https://rubygems.org"

gem "github-pages", group: :jekyll_plugins

group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.6"
  gem "jemoji", "~> 0.10.1"
  gem 'jekyll-mentions'
  gem 'jekyll-avatar'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
end

gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
gem "wdm", "~> 0.1.0" if Gem.win_platform?
